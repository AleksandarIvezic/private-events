<h1>New event</h1>

<%=form_with model: @event do |f|%>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, autocomplete: "title" %>
  </div>
  <div class="field">
    <%= f.label :details %><br />
    <%= f.text_area :details, autocomplete: "details" %>
  </div>

  <div class="field">
    <%= f.label :event_date %><br />
    <%= f.date_field :event_date,  autocomplete: "event_date" %>
  </div>



    <div class="actions">
    <%= f.submit "Submit Event" %>
  </div>
  <% end %>
  