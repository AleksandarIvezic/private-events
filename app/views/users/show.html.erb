<h1> Created Events</h1>

<% @events.each do |event|%>

    <h3><%= event.title%></h3>
    <p><%= event.details%></p>
    <p><%= link_to'Edit Event', edit_event_path(event_id: event.id) %></p>

    <p><%= link_to "Delete event", event_path(event), 
                    method: :delete, 
                    data: { confirm: "Are you sure you want to delete this event?" }  %></p>


<% end %>

<h1>Your attending events</h1>
<h2>Past events</h2>
<%@past_events.each do |event|%>
       
    <h3><%= event.title%></h3>
    <p><%= event.details%></p>
    <p><%= event.event_date%></p>

<% end %>
<h2>Upcoming events</h2>
<%@upcoming_events.each do |event|%>
       
    <h3><%= event.title%></h3>
    <p><%= event.details%></p>
    <p><%= event.event_date%></p>

<% end %>